{
  "parser": "babel-eslint",
  "extends": [
    "standard",
    "standard-react"
  ],
  "env": {
    "es6": true
  },
  "plugins": [
    "react"
  ],
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "space-before-function-paren": 0,
    "react/jsx-boolean-value": 0,
    "quotes": [2, "double", "avoid-escape"],
    "semi": ["error", "always"],
    "comma-dangle": ["error", "always-multiline"]
  }
}
